# Session Password : arbitrary to restrict acess to only those present in user sessions
session_password = "new_session_password"

# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
anthropic_api_key = "your_anthropic_api_key_here"

# Claude Model Configuration
# Model to use for chat responses, get an example from anthropic API console
anthropic_model = "claude-sonnet-4-20250514"
# Anthropic API version header
anthropic_version = "2023-06-01"
# Maximum tokens per response
anthropic_max_tokens = 1024
# Temperature for response creativity (0.0 = deterministic, 1.0 = creative)
anthropic_temperature = 0.7

# Admin Login Credentials (required for admin access)
# These credentials are used to access admin controls (API key entry, system prompt, role settings)
admin_username = "your_admin_username"
admin_password = "your_secure_admin_password"

# Dropbox API Configuration (required for CSV export)
# Get your access token from: https://www.dropbox.com/developers/apps
dropbox_access_token = "your_dropbox_access_token_here"

# Dropbox Folder Path (optional - if not provided, files go to app folder)
# Example: "/ArchPal Exports" (must start with /)
dropbox_folder_path1 = "/ArchPal Exports"
dropbox_folder_path2 = "/ArchPal Exports Anonymized"
